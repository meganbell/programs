<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Instructor Details</h3>
  </div>
  <div class="panel-body">
    <div>
      <dl class="dl-horizontal">
        <dt>Last name</dt>
        <dd><%= @instructor.last_name %></dd>
        <dt>First name</dt>
        <dd><%= @instructor.first_name %></dd>
        <dt>Hire Date</dt>
        <dd><%= @instructor.hire_date %></dd>
        <dt>Departments</dt>
        <dd>
          <table class="table">
            <thead>
              <tr class= "row">
                <th>Department Name</th>
              </tr>
            </thead>
            <tbody>
              <% @departments.each do |department| %>
                <tr class= "row">
                <td><%= department.name %></td>
              
              </tr>
              <% end %>
            </tbody>
          </table>
        </dd>

      </dl>
  </div>
</div>
<div class= "panel-footer">
	<%= link_to 'Edit', edit_instructor_path(@instructor),:class => "btn-primary btn-sm" %>
	<%= link_to 'Back', instructors_path,:class => "btn-primary btn-sm" %>
</div>
</div>
           