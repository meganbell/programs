<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1>Listing Tacks</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Board</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tacks.each do |tack| %>
      <tr>
        <td><%= tack.name %></td>
        <td><%= image_tag(tack.image_url, "width" => 200)%></td>
        <td><%= tack.board_id %></td>
        <td><%= tack.user_id %></td>
        <td><%= link_to 'Show', tack %></td>
        <td><%= link_to 'Edit', edit_tack_path(tack) %></td>
        <td><%= link_to 'Destroy', tack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

